package objects {		import flash.display.MovieClip;	import flash.events.Event;	import objects.Floor;		public class MoveBox extends MovieClip {		public var forcebar:ScrollBar;		private var moveAble:Boolean;		//private var floorType:int;				private var weight:int;		private var maxWeight:int = 50;		private var minWeight:int = 5;		private var force:int;		private var frictionStatic:Number;		private var frictionMove:Number;		private var frictionScale:int = 10;		private var acceleration:Number;				public function MoveBox() {			init();			addListener();		}				public function init() {			//floorType = 0;			force = 0;			weight = 25;			frictionMove = (Floor.IRONMOVE)*frictionScale;			frictionStatic = (Floor.IRONSTATIC)*frictionScale;		}				public function reset(){			this.x = 170;			this.y = 485;		}				private function addListener():void {			this.addEventListener(Event.ENTER_FRAME, movement);		}				private function movement(e:Event):void {			if (moveAble)			{				this.gotoAndStop(2);				this.x += acceleration;				//trace("x:" + this.x + "y:" + this.y);				if (this.x > 1300)				{					moveAble = false;					this.gotoAndStop(1);				}			}			else {							}		}				public function weightUp():void {			if( weight < maxWeight)				weight += 5;		}				public function weightDown():void {			if( weight > minWeight)				weight -= 5;		}				public function getWeight():int {			return weight;		}				public function enableMove():void {			this.moveAble = true;			this.force = this.forcebar.getForceNum();			this.setAcceleration();			trace(this.forcebar.getForceNum());			trace("acceleration:"+this.acceleration+"force:"+this.force);		}				public function setFloorType(type:int):void {			switch (type) 			{				case 1:					setFrictions(Floor.IRONMOVE, Floor.IRONSTATIC);				break;				case 2:					setFrictions(Floor.WOODMOVE, Floor.WOODSTATIC);				break;				case 3:					setFrictions(Floor.SANDMOVE, Floor.SANDSTATIC);				break;			default:				setFrictions(Floor.IRONMOVE, Floor.IRONSTATIC);			}		}				public function setFrictions(m:Number, s:Number):void {			frictionMove = m * frictionScale;			frictionStatic = s* frictionScale;		}				public function setAcceleration():void {			if (force < frictionStatic)			{				acceleration = 0;			}			else {				acceleration = (force - frictionMove) / weight;				//acceleration = 3;			}		}	}	}